<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="udesc.br.tep.intent.MainActivity">

    <LinearLayout
        android:id="@+id/layoutLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAbrirFone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrir Telefone" />

        <Button
            android:id="@+id/btnTirarFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tirar foto" />

        <Button
            android:id="@+id/btnSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Acessar Site" />

        <Button
            android:id="@+id/btnLocalizacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrir Maps" />

        <Button
            android:id="@+id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrir Email" />

        <Button
            android:id="@+id/btnAddAlarme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Alarme" />

        <ImageView
            android:id="@+id/imagem"
            android:layout_width="match_parent"
            android:layout_height="203dp"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
